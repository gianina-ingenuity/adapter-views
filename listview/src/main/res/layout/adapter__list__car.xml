<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    
    <TextView
        android:id="@+id/horsepower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/fontsize__title"
        android:textColor="@color/text__normal"/>
    
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/fontsize__title"
        android:textStyle="italic"
        android:textColor="@android:color/black"/>
    
    <TextView
        android:id="@+id/model"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/horsepower"
        android:textSize="@dimen/fontsize__title"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>
    
    <TextView
        android:id="@+id/brand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/model"
        android:layout_toLeftOf="@id/price"
        android:textSize="@dimen/fontsize__subtitle"
        android:textColor="@color/text__normal"/>
    
    <TextView
        android:id="@+id/weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/brand"
        android:layout_toLeftOf="@id/price"
        android:textSize="@dimen/fontsize__body"
        android:textColor="@color/text__normal"/>
</RelativeLayout>
